{
    "openapi": "3.0.1",
    "info": {
      "title": "BookStore App ",
      "description": "User and Admin can register and login"
    },
    "servers": [
        {
          "url": "http://localhost:3000/api/v1"
        }
      ],
      "tags": [
        {
          "name": "BookStore using express CLI",
          "description": "This is for managing BookStore"
        }
      ],
      "paths": {
        "/bookstore_users": {
          "post": {
            "tags": [
              "User"
            ],
            "description": "Register user...",
            "requestBody": {
              "description": "Register user",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              },
              "required": false
            },
            "responses": {
              "201": {
                "description": "Mail sent successfully",
                "content": {}
              },
              "500": {
                "description": "Internal server error",
                "content": {}
              }
            },
            "x-codegen-request-body-name": "Register new name"
          }
        },
        "/bookstore_users/verification": {
          "post": {
            "tags": [
              "User"
            ],
            "description": "verify token...",
            "responses": {
              "201": {
                "description": "sucessfully verifyed and stored data",
                "content": {}
              },
              "404": {
                "description": "token verification failed",
                "content": {}
              },
              "500": {
                "description": "Internal server error",
                "content": {}
              }
            },
            "security": [
              {
                "JWT": []
              }
            ]
          }
        },
        "/bookstore_users/admin": {
          "post": {
            "tags": [
              "Admin"
            ],
            "description": "Register admin...",
            "requestBody": {
              "description": "Register admin",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              },
              "required": false
            },
            "responses": {
              "201": {
                "description": "Mail sent successfully",
                "content": {}
              },
              "500": {
                "description": "Internal server error",
                "content": {}
              }
            },
            "x-codegen-request-body-name": "Register new name"
          }
        },
        "/bookstore_users/login":{
          "post": {
            "tags": [
              "User"
            ],
            "description": "User login",
            "requestBody": {
              "description": "User login",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/login"
                  }
                }
              },
              "required": false
            },
            "responses": {
              "201": {
                "description": "sucessfully logged in",
                "content": {}
              },
              "404": {
                "description": "email or password doesn't match",
                "content": {}
              },
              "500": {
                "description": "Internal server error",
                "content": {}
              }
            },
            "x-codegen-request-body-name": "login user"
          }
        }
},
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          }
        }
      },
      "login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      }
    },
    "securitySchemes": {
      "JWT": {
        "type": "apiKey",
        "name": "Authorization",
        "in": "header"
      }
    }
  }
}