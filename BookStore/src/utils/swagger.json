{
    "openapi": "3.0.1",
    "info": {
      "title": "BookStore App ",
      "description": "User and Admin can register and login"
    },
    "servers": [
        {
          "url": "http://localhost:3000/api/v1"
        }
      ],
      "tags": [
        {
          "name": "BookStore using express CLI",
          "description": "This is for managing BookStore"
        }
      ],
      "paths": {
        "/users": {
          "post": {
            "tags": [
              "User"
            ],
            "description": "Register user...",
            "requestBody": {
              "description": "Register user",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              },
              "required": false
            },
            "responses": {
              "201": {
                "description": "Mail sent successfully",
                "content": {}
              },
              "500": {
                "description": "Internal server error",
                "content": {}
              }
            },
            "x-codegen-request-body-name": "Register new name"
          }
        },
        "/users/verification": {
          "post": {
            "tags": [
              "User"
            ],
            "description": "verify token...",
            "responses": {
              "201": {
                "description": "sucessfully verifyed and stored data",
                "content": {}
              },
              "404": {
                "description": "token verification failed",
                "content": {}
              },
              "500": {
                "description": "Internal server error",
                "content": {}
              }
            },
            "security": [
              {
                  "bearerAuth": []
              }
            ]
          }
        },
        "/users/admin": {
          "post": {
            "tags": [
              "Admin"
            ],
            "description": "Register admin...",
            "requestBody": {
              "description": "Register admin",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/User"
                  }
                }
              },
              "required": false
            },
            "responses": {
              "201": {
                "description": "Mail sent successfully",
                "content": {}
              },
              "500": {
                "description": "Internal server error",
                "content": {}
              }
            },
            "x-codegen-request-body-name": "Register new name"
          }
        },
        "/users/login":{
          "post": {
            "tags": [
              "User"
            ],
            "description": "User login",
            "requestBody": {
              "description": "User login",
              "content": {
                "application/json": {
                  "schema": {
                    "$ref": "#/components/schemas/login"
                  }
                }
              },
              "required": false
            },
            "responses": {
              "201": {
                "description": "sucessfully logged in",
                "content": {}
              },
              "404": {
                "description": "email or password doesn't match",
                "content": {}
              },
              "500": {
                "description": "Internal server error",
                "content": {}
              }
            },
            "x-codegen-request-body-name": "login user"
          }
        },
        "/books": {
          "get": {
              "tags": [
                  "Books"
              ],
              "description": "Get all books.",
              "security": [
                  {
                      "bearerAuth": []
                  }
              ],
              "responses": {
                  "200": {
                      "description": "All books fetched successfully",
                      "content": {}
                  },
                  "400": {
                      "description": "Bad request",
                      "content": {}
                  },
                  "500": {
                      "description": "Internal server error",
                      "content": {}
                  }
              }
          }
      },
      "/books/{_id}": {
          "get": {
              "tags": [
                  "Books"
              ],
              "description": "Get a book by ID.",
              "security": [
                  {
                      "bearerAuth": []
                  }
              ],
              "parameters": [
                  {
                      "name": "_id",
                      "in": "path",
                      "required": true,
                      "schema": {
                          "type": "string"
                      }
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Book fetched successfully",
                      "content": {}
                  },
                  "400": {
                      "description": "Bad request",
                      "content": {}
                  },
                  "500": {
                      "description": "Internal server error",
                      "content": {}
                  }
              }
          },
          "put": {
              "tags": [
                  "Books"
              ],
              "description": "Update a book by ID.",
              "security": [
                  {
                      "bearerAuth": []
                  }
              ],
              "parameters": [
                  {
                      "name": "_id",
                      "in": "path",
                      "required": true,
                      "schema": {
                          "type": "string"
                      }
                  }
              ],
              "requestBody": {
                  "description": "Update book details",
                  "content": {
                      "application/json": {
                          "schema": {
                              "$ref": "#/components/schemas/Book"
                          }
                      }
                  },
                  "required": true
              },
              "responses": {
                  "200": {
                      "description": "Book updated successfully",
                      "content": {}
                  },
                  "400": {
                      "description": "Bad request",
                      "content": {}
                  },
                  "500": {
                      "description": "Internal server error",
                      "content": {}
                  }
              }
          },
          "delete": {
              "tags": [
                  "Books"
              ],
              "description": "Delete a book by ID.",
              "security": [
                  {
                      "bearerAuth": []
                  }
              ],
              "parameters": [
                  {
                      "name": "_id",
                      "in": "path",
                      "required": true,
                      "schema": {
                          "type": "string"
                      }
                  }
              ],
              "responses": {
                  "200": {
                      "description": "Book deleted successfully",
                      "content": {}
                  },
                  "400": {
                      "description": "Bad request",
                      "content": {}
                  },
                  "500": {
                      "description": "Internal server error",
                      "content": {}
                  }
              }
          }
      }
},
  "components": {
    "schemas": {
      "User": {
        "type": "object",
        "properties": {
          "fullName": {
            "type": "string"
          },
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          },
          "phone": {
            "type": "string"
          }
        }
      },
      "login": {
        "type": "object",
        "properties": {
          "email": {
            "type": "string"
          },
          "password": {
            "type": "string"
          }
        }
      },
      "Book": {
        "type": "object",
        "properties": {
            "description": {
                "type": "string"
            },
            "discountPrice": {
                "type": "number"
            },
            "bookImage": {
                "type": "string",
                "nullable": true
            },
            "admin_user_id": {
                "type": "string"
            },
            "bookName": {
                "type": "string"
            },
            "author": {
                "type": "string"
            },
            "quantity": {
                "type": "number"
            },
            "price": {
                "type": "number"
            }
        },
        "required": [
            "description",
            "discountPrice",
            "bookName",
            "author",
            "quantity",
            "price"
        ]
     }
    },

    "securitySchemes": {
      "bearerAuth": {
          "type": "http",
          "scheme": "bearer",
          "bearerFormat": "JWT"
      }
    }
  }
}